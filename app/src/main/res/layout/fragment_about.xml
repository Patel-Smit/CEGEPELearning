<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/mainlogo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/about_tv_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="CEGEP E-Learning is an app developed by 4DEVLP. It allows students online accessibility to the courses offered by CEGEP, and offers instant access to many tutorial videos as well as students can upload their tutorials too. It also provides a live chat functionality, where students can post their doubts or can discuss about a topic."
                        android:textAlignment="center"
                        android:textColor="#000000"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/about_tv_TandCHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Terms and Conditions >"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:background="#FFA000"></TextView>

                    <TextView
                        android:id="@+id/about_tv_termsAndCondi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="User will be self responsible for the content he/she may post. \n \n If a user spams other users or post obscene conent or other violative activities then user's account can be terminated.\n \n Your access to and use of the Service is conditioned on your acceptance of and compliance with
these Terms. These Terms apply to all visitors, users and others who access or use the Service. \n \n We reserve the right, at our sole discretion, to modify or replace these Terms at any time. If a
revision is material we will try to provide at least 30 (change this) days' notice prior to any new terms
taking effect. What constitutes a material change will be determined at our sole discretion.
 \n \n If you have any questions about these Terms, please admin"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:visibility="gone"
                        android:background="#e6e6e6"></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/about_tv_repComm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Report a Bug/ Comments >"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:background="#AA00FF"></TextView>

                    <EditText
                        android:id="@+id/about_et_repComm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="Bug Description"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="10"
                        android:visibility="gone"
                        android:background="#e6e6e6"></EditText>

                    <Button
                        android:id="@+id/about_btn_submitReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:background="#AA00FF"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:visibility="gone"></Button>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gradient">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Copyright \u00a9 2020, 4Devlp"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/team_logo" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>